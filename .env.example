# Local development (SQLite)
DATABASE_URL="file:./dev.db"

# Production (Turso) - get these from `turso db show` and `turso db tokens create`
# TURSO_DATABASE_URL="libsql://your-db-name-your-org.turso.io"
# TURSO_AUTH_TOKEN="eyJ..."

# Optional: Custom map tile URL
# NEXT_PUBLIC_MAP_TILE_URL="https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png"

# Auth0 (v4) - get these from Auth0 dashboard
# AUTH0_DOMAIN="your-tenant.auth0.com"
# AUTH0_CLIENT_ID="your-client-id"
# AUTH0_CLIENT_SECRET="your-client-secret"
# AUTH0_SECRET="[generate: openssl rand -hex 32]"
# APP_BASE_URL="http://localhost:3000"

# Encryption key for sensitive data (32 bytes hex)
# Generate: openssl rand -hex 32
# ENCRYPTION_KEY="your-64-character-hex-key"
